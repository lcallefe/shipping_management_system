<h1>Alterar modalidade de entrega</h1>

<%= form_with(model: @sedex) do |f| %>
  <div>
    <%= f.label :flat_fee %>
    <%= f.text_field :flat_fee %>
  </div><br/>
  <div>
    <%= f.label :status %>
    <%= f.select :status, Sedex.statuses.keys.map { |status| [Sedex.human_enum_name(:status, status), status] } %> 
  </div><br/><br/>
    
    <%= f.submit 'Salvar' %><br/>
<% end %>
