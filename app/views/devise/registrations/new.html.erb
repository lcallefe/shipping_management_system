<h2>Cadastre-se</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :admin, 'UsuÃ¡rio comum', :value => 'false' %>
    <%= f.radio_button :admin, 'false' %> 
  </div>

  <div class="field">
    <%= f.label :admin, 'Administrador', :value => 'true' %>
    <%= f.radio_button :admin, 'true' %> 
  </div>

  <div class="actions">
    <%= f.submit "Criar sua conta" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
